{% extends "base.html.twig" %}

{% block title %}Feed{% endblock %}

{% block body %}

    <div class="container-lg">

        <div class="feeds-header header">
            <h3>Browse through your latest feeds</h3>
            <span><a href="/feeds/add" class="btn btn-primary add-book">+ Add new Feed</a></span>
        </div>

        <div class="feeds">

            {% for post in feeds %}

                <div class="card mb-3">
                    {% if post.thumbnailUrl != '' %}
                        <a href="{{ post.url }}">
                            <div class="card-img" style="background-image: url({{ post.thumbnailUrl }})"></div>
                        </a>
                    {% else %}
                        <a href="{{ post.url }}">
                            <div class="card-img"></div>
                        </a>
                    {% endif %}
                    <div class="card-body">
                        <a href="{{ post.url }}">
                            <h5 class="card-title"><strong>{{ post.title }}</strong></h5></a>
                        <p style="margin:-10px 0 10px 0">({{ post.feed }}) - {{ post.date|date("D d M, H:i") }}</p>
                        <p class="card-text">{{ post.teaser  | raw }}</p>
                    </div>
                </div>

            {% endfor %}

        </div>
    </div>

{% endblock %}
